  "info": {
    "description": "TomoDEX API Document",
    "version": "1.0.0",
    "title": "Swagger TomoDEX",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "dex@tomochain.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "accounts",
      "description": "Account endpoints"
    },
    {
      "name": "pairs",
      "description": "Pair endpoints"
    },
    {
      "name": "tokens",
      "description": "Token endpoints"
    },
    {
      "name": "trades",
      "description": "Trade endpoints"
    },
    {
      "name": "orderbook",
      "description": "Order book endpoints"
    },
    {
      "name": "orders",
      "description": "Order endpoints"
    },
    {
      "name": "ohlcv",
      "description": "OHLCV endpoints"
    },
    {
      "name": "notification",
      "description": "Notification endpoints"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/account/{userAddress}": {
      "$ref": "./components/accounts/handleGetAccount.json"
    },
    "/account/{userAddress}/{tokenAddress}": {
      "$ref": "./components/accounts/handleGetAccountTokenBalance.json"
    },
    "/account/create?address={newAddress}": {
      "$ref": "./components/accounts/handleCreateAccount.json"
    },
    "/pairs": {
      "$ref": "./paths/pairs.json"
    },
    "/pair?baseToken={baseToken}&quoteToken={quoteToken}": {
      "$ref": "./components/pairs/handleGetPair.json"
    },
    "/pairs/data?baseToken={baseToken}&quoteToken={quoteToken}": {
      "$ref": "./components/pairs/handleGetPairData.json"
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://petstore.swagger.io/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
